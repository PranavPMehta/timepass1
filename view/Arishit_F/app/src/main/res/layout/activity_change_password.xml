<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileInfo.change_password">

    <TextView
        android:alpha="0.8"
        android:id="@+id/changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="#374f69"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_below="@id/savebutton"
        android:layout_marginLeft="25dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText        android:alpha="0.7"
        android:id="@+id/currentpass"
        android:drawableRight="@drawable/ic_visibility_black_24dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:maxWidth="250dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawableTint="#03b4ff"
        android:layout_marginTop="30dp"
        android:layout_below="@id/changepassword"
        android:hint="    Enter Current Password"/>

    <com.rengwuxian.materialedittext.MaterialEditText        android:alpha="0.7"
        android:id="@+id/newpass"
        android:drawableRight="@drawable/ic_visibility_black_24dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:drawableTint="#03b4ff"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/currentpass"
        android:hint="    Enter New Password" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:alpha="0.7"
        android:id="@+id/confirmpass"
        android:drawableRight="@drawable/ic_visibility_black_24dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="#03b4ff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/newpass"
        android:hint="    Confirm Password"/>

    <Button
        android:alpha="0.7"
        android:id="@+id/otptext"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/confirmpass"
        android:layout_alignParentRight="true"
        android:text="Get OTP"
        android:textColor="#ffffff"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#03b4ff"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/otpEdittext"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:drawableTint="#03b4ff"
        android:layout_below="@id/otptext"
        android:hint="    Enter OTP"/>

    <Button
        android:visibility="gone"
        android:id="@+id/verifyOTP"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:text="Verify"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/otpEdittext"
        android:textColor="#ffffff"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#03b4ff"
        android:elevation="10dp" />

    <Button
        android:visibility="gone"
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="25dp"
        android:text="Save"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#03b4ff"
        android:elevation="10dp" />

</RelativeLayout>