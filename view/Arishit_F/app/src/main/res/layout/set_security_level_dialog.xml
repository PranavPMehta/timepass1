<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/background_security_dialog"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="@color/cardview_light_background"
            android:text="ssl_message_title"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="35dp"
            android:layout_weight="10"
            android:textColor="@color/cardview_light_background"
            android:text="bullet"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_weight="2"
            android:textColor="@color/cardview_light_background"
            android:text="Copy"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="35dp"
            android:layout_weight="10"
            android:textColor="@color/cardview_light_background"
            android:text="bullet"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_weight="2"
            android:textColor="@color/cardview_light_background"
            android:text="Forward to other"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_weight="2"
            android:textColor="@color/cardview_light_background"
            android:text="ssl_vault_message"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:scaleX="2"
            android:scaleY="2"
            android:id="@+id/ssl_vault_checkbox"
            android:buttonTint="@color/cardview_light_background"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:text="okay"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:textSize="20dp"
            android:id="@+id/ssl_submit_popup"
            android:background="@drawable/roundedbutton_ssl"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>