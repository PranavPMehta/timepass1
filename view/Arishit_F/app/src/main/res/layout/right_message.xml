<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/right_chatbackground"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imgmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/message"
                style="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_toRightOf="@id/image"
                android:fontFamily="@font/montserrat"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/receipttimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgmsg"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/read_receipts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgvImpMsgR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/read_receipts"
                android:src="@drawable/ic_star_black_24dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/timer"
                style="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/imgvImpMsgR"
                android:fontFamily="@font/montserrat"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="18.00"
                android:textColor="#7A7A7A"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receipttimer"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/right_upvote"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_thumb_up_black_24dp"
                android:backgroundTint="#ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/right_upvotecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/right_upvote"
                android:text="10"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/right_downvote"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/right_upvotecount"
                android:background="@drawable/ic_thumb_down_black_24dp"
                android:backgroundTint="#ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/right_downvotecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@id/right_downvote"
                android:text="10"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/right_neutralvote"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/right_downvotecount"
                android:background="@drawable/ic_thumbs_up_down_black_24dp"
                android:backgroundTint="#ffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/right_neutralcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/right_neutralvote"
                android:text="10"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>