<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vault.vault_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etVaultPassword"
            android:layout_width="wrap_content"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_uid"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:alpha="0.6"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Password"
            android:minWidth="250dp"
            android:paddingLeft="7dp"
            android:paddingTop="8dp"
            android:paddingRight="7dp"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:textColor="#374f69"
            android:textColorHint="#374f69" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etConfirmVaultPassword"
            android:layout_width="wrap_content"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_uid"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:alpha="0.6"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_check_circle_black_24dp"
            android:hint="Password"
            android:minWidth="250dp"
            android:paddingLeft="7dp"
            android:paddingTop="8dp"
            android:paddingRight="7dp"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:textColor="#374f69"
            android:textColorHint="#374f69" />

        <Button
            android:id="@+id/btnVaultSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/roundedbutton"
            android:fontFamily="Arial"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>